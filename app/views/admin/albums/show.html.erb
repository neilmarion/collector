<%= link_to "Create advertisement", new_admin_album_advertisement_path(@album) %>

<br>

<% @advertisements.each do |advertisement| %>
  <div>
    <p>
      <%= advertisement.text %>
    </p>
    <p>
      <%= image_tag advertisement.photo_url %>
    </p>
    <p>
      <%= image_tag advertisement.photo.small.url %>
    </p>
  </div>
<% end %>
