<%= link_to 'back', admin_album_path(@album), class: "btn btn-default" %>

<div class="advertisement-form">

<%= form_for @advertisement, :url => admin_album_advertisements_path(:id => @album.id), :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :album_id, value: @album.id %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "input-large form-control" %>
  </p>
  <p>
    <%= f.label :photo %><br>
    <%= f.file_field :photo, class: "input-large form-control" %>
  </p>
  <p>
    <%= f.submit "create", :class => "btn btn-default" %>
  </p>
<% end %>

</div>
